<!-- Left side column. contains the logo and sidebar -->
<aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        <!-- Sidebar user panel -->
        <div class="user-panel" style="margin-bottom: 50px;overflow: inherit;">
            <div class="pull-left info">
                <p> Admin Panel </p>
            </div>
        </div>
        <!-- sidebar menu: : style can be found in sidebar.less -->
        <ul class="sidebar-menu" data-widget="tree">
            <li class="<%= current_uri == '/admin/statistics' ? 'active' : '' %>">
                <a href="/admin/statistics">
                    <i class="fa fa-line-chart"></i> <span>Statistics</span>
                </a>
            </li>
            <li class="header"><i class="fa fa-cogs"></i> Management</li>
            <li class="treeview <%= uri_group == 'coffee-part' ? 'active' : '' %>"
                style="height: auto;">
                <a href="#">
                    <i class="fa fa-coffee"></i> <span>Coffee Part</span>
                    <span class="pull-right-container">
                        <i class="fa fa-angle-left pull-right"></i>
                    </span>
                </a>
                <ul class="treeview-menu">
                    <li class="<%= current_uri == '/admin/flavors' ? 'active' : '' %>">
                        <a href="/admin/flavors">
                            <i class="fa fa-flask"></i> Flavors
                        </a>
                    </li>
                    <li class="<%= current_uri == '/admin/sizes' ? 'active' : '' %>">
                        <a href="/admin/sizes">
                            <i class="fa fa-bolt"></i> Sizes
                        </a>
                    </li>
                </ul>
            </li>
            <li class="treeview <%= uri_group == 'users-part' ? 'active' : '' %>"
                style="height: auto;">
                <a href="#">
                    <i class="fa fa-users"></i> <span>Users Part</span>
                    <span class="pull-right-container">
                        <i class="fa fa-angle-left pull-right"></i>
                    </span>
                </a>
                <ul class="treeview-menu">
                    <li class="<%= current_uri == '/admin/users' ? 'active' : '' %>">
                        <a href="/admin/users">
                            <i class="fa fa-users"></i> Users
                        </a>
                    </li>
                    <li class="<%= current_uri == '/admin/reservations' ? 'active' : '' %>">
                        <a href="/admin/reservations">
                            <i class="fa fa-calendar"></i> Reservations
                        </a>
                    </li>
                </ul>
            </li>
            <li class="header"><i class="fa fa-lock"></i> Admin</li>
            <li class="<%= current_uri == '/admin/profile' ? 'active' : '' %>">
                <a href="/admin/profile">
                    <i class="fa fa-user"></i> <span>My Profile</span>
                </a>
            </li>
            <li>
                <a href="/admin/logout">
                    <i class="fa fa-sign-out"></i> <span>Logout</span>
                </a>
            </li>
        </ul>
    </section>
    <!-- /.sidebar -->
</aside>
