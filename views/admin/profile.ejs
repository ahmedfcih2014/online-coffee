<%- include('./partials/master-part-1.ejs') %>
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="box">
                <form method="POST" action="/admin/profile">
                    <% if (success != undefined && success != '') { %>
                        <div class="alert alert-success"> <%= success %> </div>
                    <% } %>
                    <% if (error != undefined && error != '') { %>
                        <div class="alert alert-danger"> <%= error %> </div>
                    <% } %>
                    <div class="form-group">
                        <label> Name </label>
                        <input class="form-control" placeholder="Name" value="<%= admin.name %>" name="name"/>
                    </div>
                    <div class="form-group">
                        <label> Username </label>
                        <input class="form-control" placeholder="Username" value="<%= admin.username %>" name="username"/>
                    </div>
                    <div class="form-group">
                        <label> Password </label>
                        <input class="form-control" placeholder="Password" type="Password" name="password"/>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success"> Update My Profile </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
