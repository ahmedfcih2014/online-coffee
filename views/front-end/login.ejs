<%- include('./partials/part-1.ejs') %>
    <div class="login-area">
        <form method="POST" action="/login">
            <% if (errors != undefined) { %>
                <% errors.forEach(error_div => { %>
                    <%- error_div %>
                <% }) %>
            <% } %>
            <% if (error != undefined && error != '') { %>
                <div class="alert alert-danger"> <%= error %> </div>
            <% } %>
            <% if (success != undefined && success != '') { %>
                <div class="alert alert-success"> <%= success %> </div>
            <% } %>
            <div class="form-group">
                <label> Phone </label>
                <input class="form-control" placeholder="Enter Your Phone" name="phone"/>
            </div>
            <div class="form-group">
                <label> Password </label>
                <input class="form-control" placeholder="Enter Your Password" name="password" type="password"/>
            </div>
            <div class="form-group">
                <button class="btn btn-primary"> Login </button>
                <a class="btn btn-primary" href="/register"> Or Register </a>
            </div>
        </form>
    </div>
